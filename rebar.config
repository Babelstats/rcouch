{sub_dirs, ["rel"]}.

{require_otp_vsn, "R14"}.

{deps, [
	{couch, ".*", {git, "git://refuge.io/couch_core.git", 
		       master}},
	{geocouch, ".*", {git, "git://refuge.io/geocouch.git", 
			  {branch, "1.2.x"}}},
	{rhttpd, ".*", {git, "git://refuge.io/rhttpd.git", 
			master}},
	{babelstat, ".*", {git, "git@github.com:Babelstats/babelstat.git",
			   master}},
	{couchc, ".*", {git, "git://github.com/omarkj/couchc.git", 
			otp_hier}}
       ]}.

{cover_enabled, true}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{erl_opts, [debug_info]}.
